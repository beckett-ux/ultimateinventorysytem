# OPENAI API key (format: sk-XXXX... from OpenAI dashboard)
OPENAI_API_KEY=

# Vendor sheets web app endpoint (example: https://vendor.example.com)
VENDOR_SHEETS_WEBAPP_URL=

# Vendor sheets web app access key (example: abc123-key-token)
VENDOR_SHEETS_WEBAPP_KEY=

# Shopify single-store Admin API (fast path, no OAuth)
# Example domain: mystore.myshopify.com
SHOPIFY_SHOP_DOMAIN=
# Admin API access token with write_products scope (add inventory scopes if you manage stock)
SHOPIFY_ADMIN_ACCESS_TOKEN=
# Optional: override Admin API version (defaults to 2024-10)
# SHOPIFY_API_VERSION=2024-10

# Shopify OAuth (multi-store install)
SHOPIFY_APP_URL=
SHOPIFY_SCOPES=
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
NEXT_PUBLIC_SHOPIFY_API_KEY=

# Database connection string (local example: postgresql://postgres:<password>@localhost:5432/intake)
# Note: do not append ?schema=public (Prisma-only; breaks postgres.js connections)
DATABASE_URL=

# Default tenant slug (example: acme)
DEFAULT_TENANT_SLUG=

# Allowed tenant slugs, comma-separated (example: acme,contoso,globex)
TENANT_SLUG_ALLOWLIST=
